  input#kioku-title1.title.event(
    data-kioku="kioku-title1",
    name="kioku-title1",
    data-i="13",
    value="kioku-title1"
    autocomplete="off"
  )

  .org_text
    .mol_text
      h3 Key
      textarea#kioku1.kioku1.event(data-kioku="A", name="kioku1", data-i="1")
